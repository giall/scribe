{
  "name": "scribe-api",
  "scripts": {
    "dev": "ts-node-dev src/main.ts | pino-pretty",
    "function": "functions-framework --target=scribe | pino-pretty",
    "lint": "tslint --project tsconfig.json",
    "build": "tsc && copyfiles package.json .env env.yaml .gcloudignore dist",
    "test": "jest",
    "deploy": "gcloud functions deploy scribe --runtime nodejs8 --trigger-http --env-vars-file env.yaml --memory 128 --timeout 10"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true
  },
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-joi-controllers": "^1.2.0",
    "koa-logger": "^3.2.1",
    "mongodb": "^3.3.5",
    "pino": "^5.14.0"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/koa": "^2.0.52",
    "@types/koa-joi-router": "^5.2.3",
    "@types/koa-logger": "^3.1.1",
    "@types/koa__cors": "^2.2.3",
    "@types/mongodb": "^3.3.11",
    "@types/mongodb-memory-server": "^2.3.0",
    "@types/pino": "^5.8.13",
    "@types/supertest": "^2.0.8",
    "copyfiles": "^2.1.1",
    "dotenv": "^8.2.0",
    "jest": "^24.9.0",
    "mongodb-memory-server": "^6.0.1",
    "pino-pretty": "^3.5.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.2.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tslint": "^5.12.0",
    "typescript": "^3.7.2"
  },
  "private": true
}
